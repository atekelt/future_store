<header class="header trans_300">

	<!-- Top Navigation -->

	<div class="top_nav">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="top_nav_left">free delivary on all orders</div>
				</div>
				<div class="col-md-6 text-right">
					<div class="top_nav_right">
						<ul class="top_nav_menu">

							<!--  Language / My Account -->

							<%# <li class="language">
								<a href="#">
									English
									<i class="fa fa-angle-down"></i>
								</a>
								<ul class="language_selection">
									<li><a href="#">Amharic</a></li>
								</ul>
							</li> %>
							<% if user_signed_in? %>
								<li class="account">
									<a href="#">
										<%= current_user.email %>
										<i class="fa fa-angle-down"></i>
									</a>
									<ul class="account_selection">
										<li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-in" aria-hidden="true"></i>Log Out <% end %></li>
										<li><a href="/users/edit"><i class="fa fa-user-plus" aria-hidden="true"></i>Account</a></li>
									</ul>
								</li>
							<% else %>
								<li class="account">
									<a href="#">
										Log In / Sign Up
										<i class="fa fa-angle-down"></i>
									</a>
									<ul class="account_selection">
										<li><a href="/users"><i class="fa fa-sign-in" aria-hidden="true"></i>Log In</a></li>
										<li><a href="/users/sign_up"><i class="fa fa-user-plus" aria-hidden="true"></i>Sign Up</a></li>
									</ul>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Main Navigation -->

	<div class="main_nav_container">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-right">
					<div class="logo_container">
						<a href="#">Future<span>Store</span></a>
					</div>
					<nav class="navbar">
						<ul class="navbar_menu">
							<li><a href="/">home</a></li>
							<li><a href="/products">products</a></li>
							<li><a href="contact.html">contact</a></li>
						</ul>
						<ul class="navbar_user">
							<li class="checkout">
								<a href="#">
									<i class="fa fa-shopping-cart" aria-hidden="true"></i>
									<span id="checkout_items" class="checkout_items">2</span>
								</a>
							</li>
						</ul>
						<div class="hamburger_container">
							<i class="fa fa-bars" aria-hidden="true"></i>
						</div>
					</nav>
				</div>
			</div>
		</div>
	</div>

	<% if notice %>
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<%= notice %>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
			</button>
		</div>
	<% end %>
	<% if alert %>
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<%= alert %>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
			</button>
		</div>
	<% end %>

</header>


<div class="hamburger_menu">
	<div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
	<div class="hamburger_menu_content text-right">
		<ul class="menu_top_nav">
			<% if user_signed_in? %>
				<li class="menu_item has-children">
					<a href="#">
						<%= current_user.email %>
						<i class="fa fa-angle-down"></i>
					</a>
					<ul class="menu_selection">
						<li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-in" aria-hidden="true"></i>Log Out <% end %></li>
						<li><a href="/users/edit"><i class="fa fa-user-plus" aria-hidden="true"></i>Account</a></li>
					</ul>
				</li>
			<% else %>
				<li class="menu_item has-children">
					<a href="#">
						Log In / Sign Up
						<i class="fa fa-angle-down"></i>
					</a>
					<ul class="menu_selection">
						<li><a href="/users"><i class="fa fa-sign-in" aria-hidden="true"></i>Log In</a></li>
						<li><a href="/users/sign_up"><i class="fa fa-user-plus" aria-hidden="true"></i>Sign Up</a></li>
					</ul>
				</li>
			<% end %>
			<li class="menu_item"><a href="/">home</a></li>
			<li class="menu_item"><a href="/products">products</a></li>
			<li class="menu_item"><a href="#">contact</a></li>
		</ul>
	</div>
</div>

